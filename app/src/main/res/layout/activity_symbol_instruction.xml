<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_2"
    tools:context="com.juborajsarker.mindreader.SymbolInstructionActivity"
    xmlns:ads="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#70cccccc"
        android:padding="5dp"
        android:layout_centerInParent="true"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:elevation="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff"
            android:padding="5dp"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.Choose any two digit number (10-99)"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="#d0000000"
                android:background="#68cccccc"/>



        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff"
            android:padding="5dp"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.Add both digit together"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="#d0000000"
                android:background="#68cccccc" />



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff"
            android:padding="5dp"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3.Subtract add value from total number"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="#d0000000"
                android:background="#68cccccc" />



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff"
            android:padding="5dp"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*Example: \nIf chosen number=63 \nIt means: 6+3=9\nFinally: 63-9=54 \nWhich will give you answer."
                android:textSize="15sp"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="#bc000000"
                android:background="#68cccccc" />



        </LinearLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="START"
            android:background="@drawable/custom_button_1"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:onClick="symbolChoose"/>








    </LinearLayout>



    <com.google.android.gms.ads.AdView
        android:id="@+id/adView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_home_footer_1">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
